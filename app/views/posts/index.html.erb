<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% @posts.each do |p| %>
  <div class='col-sm-12 col-md-4% post-block' >
    <p>
      <%= p.title %> on <%= p.created_at %> by <%= p.author %>
    </p>
    <p>
      <%= p.body %><br>
      <%= link_to 'Show', p, class: 'btn btn-sm btn-outline-info' %>
      <%= link_to 'Edit', edit_post_path(p), class: 'btn btn-sm btn-outline-warning' %>
      <%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
    </p>
    </div>
<% end %>

